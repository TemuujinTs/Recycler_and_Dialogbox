<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/carbon_margin"
        android:layout_gravity="center_horizontal"
        >

        <carbon.widget.FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/border_color_primary"
            android:layout_gravity="center_horizontal"

            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/carbon_iconSize"
                android:layout_height="@dimen/carbon_iconSize"
                android:layout_gravity="center"
                />


        </carbon.widget.FrameLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carbon_margin"
            android:textColor="@color/colorText"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</FrameLayout>
